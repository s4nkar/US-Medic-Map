events {
    worker_connections 1024;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    # 1. Define where the Backend container is
    upstream backend {
        server backend:8000;
    }

    # 2. Define where the Frontend container is
    upstream frontend {
        server frontend:3000;
    }

    server {
        listen 80;

        # RULE 1: API requests go to Django
        location /api/ {
            proxy_pass http://backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        # RULE 2: Admin panel goes to Django
        location /admin/ {
            proxy_pass http://backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        # RULE 3: Django Static Files (CSS/Images for Admin)
        # Nginx serves these directly from the volume. Faster!
        location /django_static/ {
            alias /app/static/;
        }

        # RULE 4: Everything else goes to Next.js (The React App)
        location / {
            proxy_pass http://frontend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
    }
}